{
  "$schema": "http://json.schemastore.org/template",
  "author": "Matthieu QUANTIN",
  "identity": "ReSpAwN.BlazorProject.Template",
  "name": "Blazor project (multi-project)",
  "shortName": "r-blazor-project",
  "sourceName": "ApplicationName",
  "defaultName": "MyProject",
  "preferNameDirectory": true,

  "classifications": [
    "Blazor",
    ".NET 9"
  ],
  "tags": {
    "language": "C#",
    "type": "project"
  },

  "sources": [
    {
      "modifiers": [
        {
          "exclude": [
            "**/[Bb]in/**",
            "**/[Oo]bj/**",
            "**/.git/**",
            "**/.vs/**",
            ".template.config/**",
            "BlazorProject.sln"
          ]
        }
      ]
    }
  ],

  "guids": [
    "48339BAE-2665-4781-A2C1-AD51509E597B",
    "641B9C5B-2DF1-461C-AB08-1D501BA833F5",
    "7C91EF40-5F1C-4BEF-B9DD-85B8212E83CF",
    "1DB68B0C-7756-4C06-94BA-624B1576B73F",
    "9EA4FB7E-E64C-4913-8313-25D0BD7143E2",
    "4EF18A1C-CD76-4E0B-88F1-3943E980AF73",
    "522DEA4F-0B82-4DC0-AF4D-C3258AA7B6DB"
  ],

  "primaryOutputs": [
    { "path": "ApplicationName.Application/ApplicationName.Application.csproj" },
    { "path": "ApplicationName.Domain/ApplicationName.Domain.csproj" },
    { "path": "ApplicationName.Domain.Contracts/ApplicationName.Domain.Contracts.csproj" },
    { "path": "ApplicationName.Infrastructure/ApplicationName.Infrastructure.csproj" },
    { "path": "ApplicationName.Presentation/ApplicationName.Presentation.csproj" },
    { "path": "ApplicationName.SharedKernel/ApplicationName.SharedKernel.csproj" },
    { "path": "ApplicationName.Tests/ApplicationName.Tests.csproj" }
  ]
}
